  // Productos Relacionados
  "flex-layout.row#shelf-related": {
    "children":["flex-layout.col#relatedProducts"]
  },

  "flex-layout.col#relatedProducts":{
    "props":{
      "blockClass": "productosRecomendados"
    },
    "children": ["shelf.relatedProducts"]
  }
